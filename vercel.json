{
    "version": 2,
    "buildCommand": "next build",
    "outputDirectory": ".next",
    "installCommand": "npm install",
    "builds": [
      { 
        "src": "package.json", 
        "use": "@vercel/next",
        "config": { "outputDirectory": ".next" } 
      },
      { 
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/health",
        "dest": "api/app.py"
      },
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      {
        "handle": "filesystem"
      },
      { 
        "src": "/(.*)",
        "dest": "/"
      }
    ]
  }