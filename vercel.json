{
    "version": 2,
    "builds": [
      { 
        "src": "package.json", 
        "use": "@vercel/next"
      },
      { 
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/health",
        "dest": "api/app.py"
      },
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      { 
        "src": "/(.*)",
        "dest": "/$1"
      }
    ]
  }